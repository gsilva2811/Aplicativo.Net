@model IEnumerable<Aplicativo.Dominio.Produto>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Codigo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Valor)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Codigo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Valor)
        </td>
        <td>
            @Html.ActionLink("Editar", "Editar", new { codigo = item.Codigo }, new { @class = "item-modal" }) |
            @Html.ActionLink("Excluir", "Excluir", new { codigo = item.Codigo }, new { @class = "item-modal" })
        </td>
    </tr>
}

</table>
